@page "/editar/carro/{id:int}"

<div class="row justify-content-center">
    <div class="col-6">
        <CarForm editMode="true" OnValidaCarSubmit="editCar" Id="Id" />
    </div>
</div>


@code {
    [Parameter]
    public int Id { get; set; }

    private async Task editCar(Car car)
    {
        await carRepository.update(car);
        navigation.NavigateTo("/carros");
    }
}
